@model ShopHerePJ.Areas.Admin.Models.InventoryUpsertVM
@{
    ViewData["Title"] = "Create Inventory";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1">Create Inventory</h1>
            <small class="text-muted">Tạo record tồn kho cho 1 variant</small>
        </div>
        <a href="/Admin/Inventories" class="btn btn-secondary">Back</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-area="Admin" asp-controller="Inventories" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-12">
                        <label class="form-label">Variant</label>
                        <select asp-for="VariantId" class="form-select" asp-items="ViewBag.VariantSelect"></select>
                        <span asp-validation-for="VariantId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="QtyOnHand" class="form-label"></label>
                        <input asp-for="QtyOnHand" type="number" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="QtyReserved" class="form-label"></label>
                        <input asp-for="QtyReserved" type="number" class="form-control" />
                    </div>
                </div>

                <div class="mt-4">
                    <button class="btn btn-primary" type="submit">Save</button>
                    <a href="/Admin/Inventories" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
