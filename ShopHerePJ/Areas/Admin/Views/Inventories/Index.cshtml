@model IEnumerable<ShopHerePJ.Data.Entities.inventory>
@{
    ViewData["Title"] = "Inventory";
    var variantId = (int?)ViewBag.VariantId;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1">Inventory Management</h1>
            <small class="text-muted">Quản lý tồn kho theo SKU (variant)</small>
        </div>

        <a asp-area="Admin" asp-controller="Inventories" asp-action="Create" asp-route-variantId="@variantId"
           class="btn btn-primary">Create New</a>
    </div>

    <form method="post" asp-area="Admin" asp-controller="Inventories" asp-action="Search" class="mb-3">
        @Html.AntiForgeryToken()
        <input type="hidden" name="variantId" value="@variantId" />
        <div class="input-group">
            <input type="text" name="search" value="@ViewBag.Search"
                   class="form-control" placeholder="Tìm theo product/sku/size/color...">
            <button class="btn btn-primary" type="submit">Tìm kiếm</button>
            <a href="/Admin/Inventories" class="btn btn-secondary">Reset</a>
        </div>
    </form>

    <div class="card shadow-sm">
        <div class="card-header bg-white border-0">
            <span class="fw-semibold">Inventory list</span>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Product</th>
                            <th>Variant</th>
                            <th class="text-end">On Hand</th>
                            <th class="text-end">Reserved</th>
                            <th class="text-end">Available</th>
                            <th>Updated</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr><td colspan="8" class="text-center text-muted py-4">Không có dữ liệu.</td></tr>
                        }
                        else
                        {
                            foreach (var i in Model)
                            {
                                var avail = i.qty_on_hand - i.qty_reserved;
                                <tr>
                                    <td class="text-muted">@i.id</td>
                                    <td>
                                        <div class="fw-semibold">@i.variant?.product?.name</div>
                                        <small class="text-muted">@i.variant?.product?.sku</small>
                                    </td>
                                    <td>
                                        <div class="fw-semibold">@i.variant?.sku</div>
                                        <small class="text-muted">@i.variant?.size / @i.variant?.color</small>
                                    </td>
                                    <td class="text-end">@i.qty_on_hand</td>
                                    <td class="text-end">@i.qty_reserved</td>
                                    <td class="text-end fw-semibold">@avail</td>
                                    <td>@i.updated_at</td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-area="Admin" asp-controller="Inventories" asp-action="Edit" asp-route-id="@i.id"
                                               class="btn btn-outline-primary">Edit</a>
                                            <a asp-area="Admin" asp-controller="Inventories" asp-action="Delete" asp-route-id="@i.id"
                                               class="btn btn-outline-danger">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
