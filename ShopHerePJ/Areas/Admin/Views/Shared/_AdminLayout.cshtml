@using Microsoft.AspNetCore.Mvc.Rendering
@{
    var title = ViewData["Title"] ?? "Admin";
    string ctrl = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "");
    string act = (ViewContext.RouteData.Values["action"]?.ToString() ?? "");
    string area = (ViewContext.RouteData.Values["area"]?.ToString() ?? "");
    bool isAdminArea = area.Equals("Admin", StringComparison.OrdinalIgnoreCase);

    string IsActive(string controller, string? action = null)
    {
        if (!isAdminArea) return "";
        if (!ctrl.Equals(controller, StringComparison.OrdinalIgnoreCase)) return "";
        if (action != null && !act.Equals(action, StringComparison.OrdinalIgnoreCase)) return "";
        return "active";
    }
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@title - ShopHere Admin</title>

    <!-- Bootstrap (nếu project bạn đã include ở layout gốc thì có thể bỏ) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <style>
        :root {
            --sidebar-w: 260px;
            --sidebar-w-collapsed: 76px;
            --sidebar-bg: #0b1220;
            --sidebar-text: rgba(255,255,255,.85);
            --sidebar-text-dim: rgba(255,255,255,.65);
            --content-bg: #f5f6f8;
        }

        body {
            background: var(--content-bg);
        }

        .admin-shell {
            min-height: 100vh;
            display: flex;
        }

        /* Sidebar */
        .admin-sidebar {
            width: var(--sidebar-w);
            background: var(--sidebar-bg);
            color: var(--sidebar-text);
            position: sticky;
            top: 0;
            height: 100vh;
            transition: width .2s ease;
            overflow-x: hidden;
        }

            .admin-sidebar.collapsed {
                width: var(--sidebar-w-collapsed);
            }

        .brand {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 16px 18px;
            border-bottom: 1px solid rgba(255,255,255,.08);
        }

            .brand .logo {
                width: 40px;
                height: 40px;
                border-radius: 12px;
                display: flex;
                align-items: center;
                justify-content: center;
                background: rgba(255,255,255,.10);
            }

            .brand .brand-text {
                line-height: 1.1;
            }

                .brand .brand-text .name {
                    font-weight: 700;
                }

                .brand .brand-text .sub {
                    font-size: 12px;
                    color: var(--sidebar-text-dim);
                }

        .admin-sidebar.collapsed .brand-text {
            display: none;
        }

        .sidebar-menu {
            padding: 12px;
        }

        .menu-section {
            font-size: 11px;
            letter-spacing: .08em;
            text-transform: uppercase;
            color: rgba(255,255,255,.45);
            padding: 10px 10px 6px;
        }

        .admin-sidebar.collapsed .menu-section {
            display: none;
        }

        .menu-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 10px 10px;
            border-radius: 12px;
            text-decoration: none;
            color: var(--sidebar-text);
            margin-bottom: 6px;
        }

            .menu-item:hover {
                background: rgba(255,255,255,.08);
                color: #fff;
            }

            .menu-item .icon {
                width: 28px;
                display: flex;
                justify-content: center;
                font-size: 18px;
            }

            .menu-item .text {
                white-space: nowrap;
            }

        .admin-sidebar.collapsed .menu-item .text {
            display: none;
        }

        .menu-item.active {
            background: rgba(255,255,255,.14);
            border: 1px solid rgba(255,255,255,.12);
        }

        /* Content area */
        .admin-content {
            flex: 1;
            min-width: 0;
        }

        .topbar {
            position: sticky;
            top: 0;
            z-index: 100;
            background: #fff;
            border-bottom: 1px solid rgba(0,0,0,.06);
        }

        .topbar-inner {
            padding: 12px 16px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 12px;
        }

        .content-inner {
            padding: 16px;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="admin-shell">
        <!-- Sidebar -->
        <aside id="adminSidebar" class="admin-sidebar">
            <div class="brand">
                <div class="logo">
                    <i class="bi bi-bag-check"></i>
                </div>
                <div class="brand-text">
                    <div class="name">ShopHere</div>
                    <div class="sub">Admin Console</div>
                </div>
            </div>

            <div class="sidebar-menu">
                <div class="menu-section">General</div>

                <a class="menu-item @IsActive("Home", "Index")"
                   asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <span class="icon"><i class="bi bi-speedometer2"></i></span>
                    <span class="text">Dashboard</span>
                </a>

                <div class="menu-section">Management</div>

                <a class="menu-item @IsActive("Users")"
                   asp-area="Admin" asp-controller="Users" asp-action="Index">
                    <span class="icon"><i class="bi bi-people"></i></span>
                    <span class="text">Users</span>
                </a>

                <a class="menu-item @IsActive("Categories")"
                   asp-area="Admin" asp-controller="Categories" asp-action="Index">
                    <span class="icon"><i class="bi bi-tags"></i></span>
                    <span class="text">Categories</span>
                </a>

                <a class="menu-item @IsActive("Products")"
                   asp-area="Admin" asp-controller="Products" asp-action="Index">
                    <span class="icon"><i class="bi bi-box-seam"></i></span>
                    <span class="text">Products</span>
                </a>

                <a class="menu-item @IsActive("Inventories")"
                   asp-area="Admin"
                   asp-controller="Inventories"
                   asp-action="Index">
                    <span class="icon"><i class="bi bi-boxes"></i></span>
                    <span class="text">Inventory</span>
                </a>


                <a class="menu-item @IsActive("Orders")"
                   asp-area="Admin" asp-controller="Orders" asp-action="Index">
                    <span class="icon"><i class="bi bi-receipt"></i></span>
                    <span class="text">Orders</span>
                </a>

                <div class="menu-section">System</div>

                <a class="menu-item"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="icon"><i class="bi bi-house"></i></span>
                    <span class="text">Back to Site</span>
                </a>
            </div>
        </aside>

        <!-- Backdrop (mobile) -->
        <div id="adminBackdrop" class="backdrop"></div>

        <!-- Content -->
        <main class="admin-content">
            <!-- Topbar -->
            <div class="topbar">
                <div class="topbar-inner">
                    <div class="d-flex align-items-center gap-2">
                        <button id="btnToggleSidebar" class="btn btn-outline-secondary btn-sm" type="button">
                            <i class="bi bi-layout-sidebar-inset"></i>
                        </button>

                        <div class="d-none d-md-block">
                            <div class="fw-semibold">@title</div>
                            <div class="text-muted small">Area: Admin • @ctrl / @act</div>
                        </div>
                    </div>

                    <div class="d-flex align-items-center gap-2">
                        <form class="d-none d-md-flex" method="get" asp-area="Admin" asp-controller="Users" asp-action="Index">
                            <div class="input-group input-group-sm">
                                <span class="input-group-text"><i class="bi bi-search"></i></span>
                                <input name="q" class="form-control" placeholder="Quick search..." />
                            </div>
                        </form>

                        <div class="dropdown">
                            <button class="btn btn-light btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i> Admin
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#">Profile</a></li>
                                <li><a class="dropdown-item" href="#">Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="#">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- View -->
            <div class="content-inner">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        (function () {
            const sidebar = document.getElementById("adminSidebar");
            const btn = document.getElementById("btnToggleSidebar");
            const backdrop = document.getElementById("adminBackdrop");

            // restore state
            const saved = localStorage.getItem("admin_sidebar");
            if (saved === "collapsed") sidebar.classList.add("collapsed");

            function isMobile() { return window.matchMedia("(max-width: 992px)").matches; }

            btn.addEventListener("click", function () {
                if (isMobile()) {
                    sidebar.classList.toggle("show");
                    backdrop.classList.toggle("show");
                } else {
                    sidebar.classList.toggle("collapsed");
                    localStorage.setItem("admin_sidebar", sidebar.classList.contains("collapsed") ? "collapsed" : "expanded");
                }
            });

            backdrop.addEventListener("click", function () {
                sidebar.classList.remove("show");
                backdrop.classList.remove("show");
            });
        })();
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
