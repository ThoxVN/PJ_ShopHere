@model IEnumerable<ShopHerePJ.Data.Entities.address>

@{
    ViewData["Title"] = ViewData["Title"] ?? "Addresses";
    var userId = (int?)ViewBag.UserId;
    string userLabel = ViewBag.UserLabel as string ?? "";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1">Address Management</h1>
            <small class="text-muted">
                @if (userId.HasValue)
                {
                    <span>Danh sách Address của: <b>@userLabel</b></span>
                }
                else
                {
                    <span>Quản lý danh sách Address trong hệ thống</span>
                }
            </small>
        </div>

        <div class="d-flex gap-2">
            <a asp-area="Admin" asp-controller="Addresses" asp-action="Create" asp-route-userId="@userId"
               class="btn btn-primary">
                Create New
            </a>
            @if (userId.HasValue)
            {
                <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-secondary">
                    Back to Users
                </a>
            }
        </div>
    </div>

    <form method="post" asp-area="Admin" asp-controller="Addresses" asp-action="Search" class="mb-3">
        @Html.AntiForgeryToken()
        <input type="hidden" name="userId" value="@userId" />
        <div class="input-group">
            <input type="text" name="search" value="@ViewBag.Search"
                   class="form-control" placeholder="Tìm theo type, người nhận, phone, street, quận, city, user email...">
            <button class="btn btn-primary" type="submit">Tìm kiếm</button>
            <a href="@(userId.HasValue ? $"/Admin/Addresses/ByUser/{userId}" : "/Admin/Addresses")" class="btn btn-secondary">
                Reset
            </a>
        </div>
    </form>

    <div class="card shadow-sm">
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
            <span class="fw-semibold">Address list</span>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Type</th>
                            <th>Recipient</th>
                            <th>Phone</th>
                            <th>Street</th>
                            <th>Ward</th>
                            <th>District</th>
                            <th>City</th>
                            <th>Country</th>
                            <th class="text-center">Default</th>
                            <th>Updated</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="13" class="text-center text-muted py-4">Không có dữ liệu.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var a in Model)
                            {
                                <tr>
                                    <td class="text-muted">@a.id</td>
                                    <td>
                                        @if (a.user != null)
                                        {
                                            <div class="fw-semibold">@a.user.email</div>
                                            <small class="text-muted">@a.user.full_name</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td class="fw-semibold">@a.type</td>
                                    <td>@a.recipient_name</td>
                                    <td>@a.phone</td>
                                    <td>@a.street</td>
                                    <td>@a.ward</td>
                                    <td>@a.district</td>
                                    <td>@a.city</td>
                                    <td>@a.country</td>
                                    <td class="text-center">
                                        @if (a.is_default)
                                        {
                                            <span class="badge bg-success">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-muted">No</span>
                                        }
                                    </td>
                                    <td>@a.updated_at</td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-area="Admin" asp-controller="Addresses" asp-action="Edit" asp-route-id="@a.id"
                                               class="btn btn-outline-primary">Edit</a>
                                            <a asp-area="Admin" asp-controller="Addresses" asp-action="Delete" asp-route-id="@a.id"
                                               class="btn btn-outline-danger">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
