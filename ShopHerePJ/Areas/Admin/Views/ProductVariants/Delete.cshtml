@model ShopHerePJ.Data.Entities.product_variant
@{
    ViewData["Title"] = "Delete Variant";
    var backUrl = $"/Admin/ProductVariants?productId={Model.product_id}";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1">Delete Variant</h1>
            <small class="text-muted">Xác nhận xoá variant</small>
        </div>
        <a href="@backUrl" class="btn btn-secondary">Back</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <p>Bạn chắc chắn muốn xoá variant này?</p>

            <dl class="row mb-0">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.id</dd>

                <dt class="col-sm-3">Product</dt>
                <dd class="col-sm-9">@Model.product?.name (@Model.product?.sku)</dd>

                <dt class="col-sm-3">SKU</dt>
                <dd class="col-sm-9">@Model.sku</dd>

                <dt class="col-sm-3">Size / Color</dt>
                <dd class="col-sm-9">@Model.size / @Model.color</dd>

                <dt class="col-sm-3">Active</dt>
                <dd class="col-sm-9">@Model.is_active</dd>
            </dl>

            <form asp-area="Admin" asp-controller="ProductVariants" asp-action="Delete" asp-route-id="@Model.id" method="post" class="mt-4">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Delete</button>
                <a href="@backUrl" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
