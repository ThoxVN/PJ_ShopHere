@model ShopHerePJ.Areas.Admin.Models.ProductVariantUpsertVM
@{
    ViewData["Title"] = "Create Variant";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1">Create Variant</h1>
            <small class="text-muted">Tạo mới SKU theo size/color</small>
        </div>
        <a href="/Admin/ProductVariants" class="btn btn-secondary">Back</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-area="Admin" asp-controller="ProductVariants" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Product</label>
                        <select asp-for="ProductId" class="form-select" asp-items="ViewBag.ProductSelect"></select>
                        <span asp-validation-for="ProductId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Sku" class="form-label"></label>
                        <input asp-for="Sku" class="form-control" />
                        <span asp-validation-for="Sku" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Size" class="form-label"></label>
                        <input asp-for="Size" class="form-control" placeholder="S, M, L..." />
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Color" class="form-label"></label>
                        <input asp-for="Color" class="form-control" placeholder="Red, Blue..." />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="NameExtension" class="form-label"></label>
                        <input asp-for="NameExtension" class="form-control" placeholder="VD: 'Navy / White'" />
                    </div>

                    <div class="col-md-3">
                        <label asp-for="PriceModifier" class="form-label"></label>
                        <input asp-for="PriceModifier" type="number" step="0.01" class="form-control" />
                    </div>

                    <div class="col-md-3 d-flex align-items-end">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="IsActive" />
                            <label class="form-check-label" asp-for="IsActive">Active</label>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button class="btn btn-primary" type="submit">Save</button>
                    <a href="/Admin/ProductVariants" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
