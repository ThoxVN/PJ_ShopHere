@model ShopHerePJ.Data.Entities.category

@{
    ViewData["Title"] = "Create Category";
}

<h1>Create Category</h1>

<form asp-area="Admin" asp-controller="Categories" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Name -->
    <div class="mb-3">
        <label asp-for="name" class="form-label"></label>
        <input asp-for="name" class="form-control" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>

    <!-- Slug -->
    <div class="mb-3">
        <label asp-for="slug" class="form-label"></label>
        <input asp-for="slug" class="form-control" />
        <span asp-validation-for="slug" class="text-danger"></span>
    </div>

    <!-- Parent Category -->
    <div class="mb-3">
        <label asp-for="parent_id" class="form-label"></label>
        <select asp-for="parent_id" class="form-select" asp-items="ViewBag.parent_id">
            <option value="">-- No parent --</option>
        </select>
        <span asp-validation-for="parent_id" class="text-danger"></span>
    </div>

    <!-- Active -->
    <div class="form-check mb-3">
        <input asp-for="is_active" class="form-check-input" />
        <label asp-for="is_active" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

    <a asp-area="Admin"
       asp-controller="Categories"
       asp-action="Index"
       class="btn btn-secondary">
        Back
    </a>
</form>
