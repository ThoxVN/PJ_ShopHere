@model ShopHerePJ.Data.Entities.category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container-fluid">
    <h1 class="h3 mb-3">Delete Category</h1>

    <div class="alert alert-warning">
        Bạn có chắc chắn muốn xóa category sau?
    </div>

    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.name</dd>

        <dt class="col-sm-2">Slug</dt>
        <dd class="col-sm-10">@Model.slug</dd>

        <dt class="col-sm-2">Parent</dt>
        <dd class="col-sm-10">@Model.parent?.name</dd>
    </dl>

    <form asp-area="Admin" asp-controller="Categories" asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="id" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-secondary">
            Cancel
        </a>
    </form>
</div>
