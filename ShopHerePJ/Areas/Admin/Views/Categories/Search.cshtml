@model IEnumerable<ShopHerePJ.Data.Entities.category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1">Product Management</h1>
            <small class="text-muted">Quản lý danh sách Category trong hệ thống</small>
        </div>

        <div>
            <a asp-area="Admin"
               asp-controller="Categories"
               asp-action="Create"
               class="btn btn-primary">
                Create New
            </a>
        </div>
        <form method="post" asp-action="Search" asp-area="Admin"
              asp-controller="Categories" class="mb-3">
            <div class="input-group">
                <input type="text" name="search" value="@ViewBag.Search"
                       class="form-control" placeholder="Tìm theo tên, SKU, chất liệu, danh mục...">
                <button class="btn btn-primary" type="submit">Tìm kiếm</button>
                <a href="/Admin/Products" class="btn btn-secondary">Reset</a>
            </div>
        </form>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
            <span class="fw-semibold">Category list</span>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">

                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Slug</th>
                            <th>Parent ID</th>
                            <th>Created At</th>
                            <th>Updated At</th>
                            <th class="text-center">Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-muted">@item.id</td>
                                <td class="fw-semibold">@item.slug</td>
                                <td>
                                    <div class="fw-semibold">@item.name</div>
                                </td>
                                <td>@item.parent_id</td>
                                <td>@item.created_at</td>
                                <td>@item.updated_at</td>
                                <td class="text-center">
                                    @(item.is_active ? "Active" : "Inactive")
                                </td>

                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group">

                                        <a asp-area="Admin"
                                           asp-controller="Categories"
                                           asp-action="Edit"
                                           asp-route-id="@item.id"
                                           class="btn btn-outline-primary">
                                            Edit
                                        </a>
                                        <a asp-area="Admin"
                                           asp-controller="Categories"
                                           asp-action="Delete"
                                           asp-route-id="@item.id"
                                           class="btn btn-outline-danger">
                                            Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
