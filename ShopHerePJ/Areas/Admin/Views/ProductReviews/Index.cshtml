@model IEnumerable<ShopHerePJ.Data.Entities.product_review>

@{
    ViewData["Title"] = ViewData["Title"] ?? "Product Reviews";
    var productId = (int?)ViewBag.ProductId;
    string productLabel = ViewBag.ProductLabel as string ?? "";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1">Review Management</h1>
            <small class="text-muted">
                @if (productId.HasValue)
                {
                    <span>Reviews của: <b>@productLabel</b></span>
                }
                else
                {
                    <span>Quản lý đánh giá sản phẩm</span>
                }
            </small>
        </div>

        <div class="d-flex gap-2">
            <a asp-area="Admin" asp-controller="ProductReviews" asp-action="Create" asp-route-productId="@productId"
               class="btn btn-primary">Create New</a>

            @if (productId.HasValue)
            {
                <a asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@productId"
                   class="btn btn-secondary">Back to Product</a>
            }
        </div>
    </div>

    <form method="post" asp-area="Admin" asp-controller="ProductReviews" asp-action="Search" class="mb-3">
        @Html.AntiForgeryToken()
        <input type="hidden" name="productId" value="@productId" />
        <div class="input-group">
            <input type="text" name="search" value="@ViewBag.Search"
                   class="form-control" placeholder="Tìm theo title, content, rating, user email, product...">
            <button class="btn btn-primary" type="submit">Tìm kiếm</button>
            <a href="@(productId.HasValue ? $"/Admin/ProductReviews/ByProduct/{productId}" : "/Admin/ProductReviews")"
               class="btn btn-secondary">Reset</a>
        </div>
    </form>

    <div class="card shadow-sm">
        <div class="card-header bg-white border-0">
            <span class="fw-semibold">Review list</span>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Product</th>
                            <th>User</th>
                            <th class="text-center">Rating</th>
                            <th>Title</th>
                            <th>Content</th>
                            <th class="text-center">Approved</th>
                            <th>Updated</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted py-4">Không có dữ liệu.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var r in Model)
                            {
                                <tr>
                                    <td class="text-muted">@r.id</td>
                                    <td>
                                        <div class="fw-semibold">@r.product?.name</div>
                                        <small class="text-muted">@r.product?.sku</small>
                                    </td>
                                    <td>
                                        @if (r.user != null)
                                        {
                                            <div class="fw-semibold">@r.user.email</div>
                                            <small class="text-muted">@r.user.full_name</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-dark">@r.rating</span>
                                    </td>
                                    <td>@r.title</td>
                                    <td class="text-muted" style="max-width: 360px;">
                                        <div class="text-truncate">@r.content</div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge @(r.is_approved ? "bg-success" : "bg-secondary")">
                                            @(r.is_approved ? "Yes" : "No")
                                        </span>
                                    </td>
                                    <td>@r.updated_at</td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-area="Admin" asp-controller="ProductReviews" asp-action="Edit" asp-route-id="@r.id"
                                               class="btn btn-outline-primary">Edit</a>
                                            <a asp-area="Admin" asp-controller="ProductReviews" asp-action="Delete" asp-route-id="@r.id"
                                               class="btn btn-outline-danger">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
