@model ShopHerePJ.Areas.Admin.Models.ProductUpsertVM
@{
    ViewData["Title"] = "Create Product";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1">Create Product</h1>
            <small class="text-muted">Tạo mới product</small>
        </div>
        <a href="/Admin/Products" class="btn btn-secondary">Back</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-area="Admin" asp-controller="Products" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Category</label>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategorySelect">
                            <option value="">-- None --</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Sku" class="form-label"></label>
                        <input asp-for="Sku" class="form-control" />
                        <span asp-validation-for="Sku" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Material" class="form-label"></label>
                        <input asp-for="Material" class="form-control" />
                    </div>

                    <div class="col-md-6 d-flex align-items-end">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="IsActive" />
                            <label class="form-check-label" asp-for="IsActive">Active</label>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="DescriptionHtml" class="form-label"></label>
                        <textarea asp-for="DescriptionHtml" class="form-control" rows="6"
                                  placeholder="Có thể nhập HTML..."></textarea>
                    </div>
                </div>

                <div class="mt-4">
                    <button class="btn btn-primary" type="submit">Save</button>
                    <a href="/Admin/Products" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
