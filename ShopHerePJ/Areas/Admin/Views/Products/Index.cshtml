@model IEnumerable<ShopHerePJ.Data.Entities.product>

@{
    ViewData["Title"] = "Products";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1">Product Management</h1>
            <small class="text-muted">Quản lý danh sách Product trong hệ thống</small>
        </div>

        <div>
            <a asp-area="Admin" asp-controller="Products" asp-action="Create" class="btn btn-primary">
                Create New
            </a>
        </div>
    </div>

    <form method="post" asp-area="Admin" asp-controller="Products" asp-action="Search" class="mb-3">
        @Html.AntiForgeryToken()
        <div class="input-group">
            <input type="text" name="search" value="@ViewBag.Search"
                   class="form-control" placeholder="Tìm theo tên, SKU, chất liệu, danh mục...">
            <button class="btn btn-primary" type="submit">Tìm kiếm</button>
            <a href="/Admin/Products" class="btn btn-secondary">Reset</a>
        </div>
    </form>

    <div class="card shadow-sm">
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
            <span class="fw-semibold">Product list</span>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>SKU</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Material</th>
                            <th class="text-center">Active</th>
                            <th>Created</th>
                            <th>Updated</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td class="text-muted">@p.id</td>
                                <td class="fw-semibold">@p.sku</td>
                                <td>
                                    <div class="fw-semibold">@p.name</div>
                                </td>
                                <td>@(p.category?.name ?? "—")</td>
                                <td>@p.material</td>
                                <td class="text-center">
                                    <span class="badge @(p.is_active ? "bg-success" : "bg-secondary")">
                                        @(p.is_active ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>@p.created_at</td>
                                <td>@p.updated_at</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@p.id"
                                           class="btn btn-outline-primary">Edit</a>
                                        <a asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@p.id"
                                           class="btn btn-outline-danger">Delete</a>
                                        <a asp-area="Admin" asp-controller="ProductReviews" asp-action="ByProduct" asp-route-productId="@p.id"
                                           class="btn btn-outline-secondary">Reviews</a>
                                    </div>
                                </td>
                            </tr>
                        }

                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted py-4">Không có dữ liệu.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
