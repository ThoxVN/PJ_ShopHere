@model IEnumerable<ShopHerePJ.Data.Entities.order>
@{
    ViewData["Title"] = "Orders";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1">Order Management</h1>
            <small class="text-muted">Quản lý đơn hàng</small>
        </div>
        <a asp-area="Admin" asp-controller="Orders" asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    <form method="post" asp-area="Admin" asp-controller="Orders" asp-action="Search" class="mb-3">
        @Html.AntiForgeryToken()
        <div class="input-group">
            <input name="search" class="form-control" value="@ViewBag.Search" placeholder="Order#, status, payment, tracking, user..." />
            <button class="btn btn-primary" type="submit">Tìm kiếm</button>
            <a href="/Admin/Orders" class="btn btn-secondary">Reset</a>
        </div>
    </form>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Order#</th>
                            <th>User</th>
                            <th>Status</th>
                            <th>Payment</th>
                            <th class="text-end">Grand Total</th>
                            <th>Updated</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var o in Model)
                        {
                            <tr>
                                <td class="text-muted">@o.id</td>
                                <td class="fw-semibold">@o.order_number</td>
                                <td>@(o.user?.email ?? "Guest")</td>
                                <td>@o.status</td>
                                <td>@o.payment_status</td>
                                <td class="text-end fw-semibold">@o.grand_total.ToString("N0") @o.currency</td>
                                <td>@o.updated_at</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-area="Admin" asp-controller="Orders" asp-action="Edit" asp-route-id="@o.id" class="btn btn-outline-primary">Edit</a>
                                        <a asp-area="Admin" asp-controller="OrderItems" asp-action="ByOrder" asp-route-orderId="@o.id" class="btn btn-outline-secondary">Items</a>
                                        <a asp-area="Admin" asp-controller="Orders" asp-action="Delete" asp-route-id="@o.id" class="btn btn-outline-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
