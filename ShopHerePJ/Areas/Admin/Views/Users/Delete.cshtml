@model ShopHerePJ.Models.user

@{
    ViewData["Title"] = "Delete User";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1">Delete User</h1>
            <small class="text-muted">Xác nhận xoá user</small>
        </div>
        <a href="/Admin/Users" class="btn btn-secondary">Back</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <p>Bạn chắc chắn muốn xoá user này?</p>

            <dl class="row mb-0">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.userid</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.email</dd>

                <dt class="col-sm-3">Full name</dt>
                <dd class="col-sm-9">@Model.full_name</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.phone</dd>

                <dt class="col-sm-3">Role</dt>
                <dd class="col-sm-9">@Model.role</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.status</dd>
            </dl>

            <form asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-id="@Model.userid" method="post" class="mt-4">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">Delete</button>
                <a href="/Admin/Users" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
