@model IEnumerable<ShopHerePJ.Models.user>

@{
    ViewData["Title"] = "Users";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1">User Management</h1>
            <small class="text-muted">Quản lý danh sách User trong hệ thống</small>
        </div>

        <div>
            <a asp-area="Admin"
               asp-controller="Users"
               asp-action="Create"
               class="btn btn-primary">
                Create New
            </a>
        </div>
    </div>

    <form method="post"
          asp-area="Admin"
          asp-controller="Users"
          asp-action="Search"
          class="mb-3">
        @Html.AntiForgeryToken()
        <div class="input-group">
            <input type="text" name="search" value="@ViewBag.Search"
                   class="form-control" placeholder="Tìm theo email, tên, phone, role, status...">
            <button class="btn btn-primary" type="submit">Tìm kiếm</button>
            <a href="/Admin/Users" class="btn btn-secondary">Reset</a>
        </div>
    </form>

    <div class="card shadow-sm">
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
            <span class="fw-semibold">User list</span>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                            <th>Full name</th>
                            <th>Phone</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Created At</th>
                            <th>Updated At</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-muted">@item.userid</td>
                                <td class="fw-semibold">@item.email</td>
                                <td>@item.full_name</td>
                                <td>@item.phone</td>
                                <td>@item.role</td>
                                <td>
                                    <span class="badge @(item.status?.ToLower() == "active" ? "bg-success" : "bg-secondary")">
                                        @item.status
                                    </span>
                                </td>
                                <td>@item.created_at</td>
                                <td>@item.updated_at</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-area="Admin"
                                           asp-controller="Users"
                                           asp-action="Edit"
                                           asp-route-id="@item.userid"
                                           class="btn btn-outline-primary">
                                            Edit
                                        </a>
                                        <a asp-area="Admin"
                                           asp-controller="Users"
                                           asp-action="Delete"
                                           asp-route-id="@item.userid"
                                           class="btn btn-outline-danger">
                                            Delete
                                        </a>
                                        <a asp-area="Admin"
                                           asp-controller="Addresses"
                                           asp-action="ByUser"
                                           asp-route-userId="@item.userid"
                                           class="btn btn-outline-secondary">
                                            Addresses
                                        </a>

                                    </div>
                                </td>
                            </tr>
                        }

                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted py-4">
                                    Không có dữ liệu.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
