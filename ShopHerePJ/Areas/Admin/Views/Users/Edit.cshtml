@model ShopHerePJ.Areas.Admin.Models.UserUpsertVM

@{
    ViewData["Title"] = "Edit User";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-1">Edit User</h1>
            <small class="text-muted">Cập nhật user</small>
        </div>
        <a href="/Admin/Users" class="btn btn-secondary">Back</a>
    </div>

    @{
        var avatarId = (int?)ViewBag.AvatarImageId;
    }

    <div class="card shadow-sm mb-3">
        <div class="card-body d-flex align-items-center justify-content-between flex-wrap gap-3">
            <div class="d-flex align-items-center gap-3">
                <div>
                    @if (avatarId.HasValue)
                    {
                        <img src="/Admin/Images/File?id=@avatarId"
                             class="rounded-circle border"
                             style="width:72px;height:72px;object-fit:cover;" />
                    }
                    else
                    {
                        <div class="rounded-circle border bg-light d-flex align-items-center justify-content-center"
                             style="width:72px;height:72px;">
                            <span class="text-muted">No</span>
                        </div>
                    }
                </div>

                <div>
                    <div class="fw-semibold">User Avatar</div>
                    <small class="text-muted">Upload ảnh đại diện (JPG/PNG), tối đa 2MB</small>
                </div>
            </div>

            <form asp-area="Admin"
                  asp-controller="Images"
                  asp-action="UploadUserAvatar"
                  method="post"
                  enctype="multipart/form-data"
                  class="d-flex align-items-center gap-2">
                @Html.AntiForgeryToken()
                <input type="hidden" name="userId" value="@Model.UserId" />

                <input id="avatarFile" name="file" type="file" accept="image/*"
                       class="form-control form-control-sm" style="max-width:260px;" />

                <button class="btn btn-primary btn-sm" type="submit">
                    Upload
                </button>
            </form>
        </div>
    </div>


    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-id="@Model.UserId" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="UserId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" class="form-control" />
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Role" class="form-label"></label>
                        <select asp-for="Role" class="form-select">
                            <option value="Customer">Customer</option>
                            <option value="Staff">Staff</option>
                            <option value="Admin">Admin</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select">
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                            <option value="Blocked">Blocked</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Password" class="form-label">New Password (optional)</label>
                        <input asp-for="Password" class="form-control" />
                        <small class="text-muted">Để trống nếu không đổi mật khẩu.</small>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                    </div>
                </div>

                <div class="mt-4">
                    <button class="btn btn-primary" type="submit">Update</button>
                    <a href="/Admin/Users" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
