@model ShopHerePJ.Models.AccAddressUpsert
@{
    ViewData["Title"] = "Thêm địa chỉ";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}

<div class="container py-4" style="max-width: 840px;">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 mb-0">Thêm địa chỉ giao hàng</h1>
        <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="Addresses">Back</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-controller="Account" asp-action="AddressCreate" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <input type="hidden" asp-for="Type" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="RecipientName" class="form-label"></label>
                        <input asp-for="RecipientName" class="form-control" />
                        <span asp-validation-for="RecipientName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Street" class="form-label"></label>
                        <input asp-for="Street" class="form-control" placeholder="Số nhà, đường..." />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Ward" class="form-label"></label>
                        <input asp-for="Ward" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="District" class="form-label"></label>
                        <input asp-for="District" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="City" class="form-label"></label>
                        <input asp-for="City" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Country" class="form-label"></label>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PostalCode" class="form-label"></label>
                        <input asp-for="PostalCode" class="form-control" />
                    </div>

                    <div class="col-12">
                        <div class="form-check">
                            <input asp-for="IsDefault" class="form-check-input" />
                            <label asp-for="IsDefault" class="form-check-label"></label>
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-end gap-2">
                    <button class="btn btn-dark" type="submit">Save</button>
                    <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="Addresses">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
