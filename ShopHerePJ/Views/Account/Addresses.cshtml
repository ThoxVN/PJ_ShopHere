@model List<ShopHerePJ.Data.Entities.address>
@{
    ViewData["Title"] = "Địa chỉ giao hàng";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h4 mb-1">Địa chỉ giao hàng</h1>
            <div class="text-muted">Danh sách địa chỉ bạn đang có. Địa chỉ có nhãn “Default” sẽ được ưu tiên.</div>
        </div>
        @* <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="Profile">Back</a> *@
        <a class="btn btn-dark" asp-controller="Account" asp-action="AddressCreate">
            + Add Address
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="text-muted">Bạn chưa có địa chỉ giao hàng nào.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var a in Model)
            {
                <div class="col-12 col-md-6">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="fw-semibold">
                                        @(a.recipient_name ?? "—")
                                        @if (a.is_default)
                                        {
                                            <span class="badge bg-success ms-2">Default</span>
                                        }
                                    </div>
                                    <div class="text-muted small">@(a.phone ?? "—")</div>
                                </div>

                                @if (!a.is_default)
                                {
                                    <form asp-controller="Account"
                                          asp-action="SetDefaultAddress"
                                          asp-route-id="@a.id"
                                          method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-dark btn-sm">
                                            Set default
                                        </button>
                                    </form>
                                }
                            </div>

                            <hr />

                            <div class="small">
                                <div>@(a.street ?? "")</div>
                                <div>
                                    @(a.ward ?? "") @(string.IsNullOrWhiteSpace(a.ward) ? "" : ",")
                                    @(a.district ?? "") @(string.IsNullOrWhiteSpace(a.district) ? "" : ",")
                                    @(a.city ?? "")
                                </div>
                                <div>@(a.country ?? "—") @(string.IsNullOrWhiteSpace(a.postal_code) ? "" : $" - {a.postal_code}")</div>
                            </div>

                            <div class="text-muted small mt-3">
                                Updated: @a.updated_at.ToString("dd/MM/yyyy HH:mm")
                            </div>
                            <a class="btn btn-outline-primary btn-sm"
                               asp-controller="Account"
                               asp-action="AddressEdit"
                               asp-route-id="@a.id">Edit</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
