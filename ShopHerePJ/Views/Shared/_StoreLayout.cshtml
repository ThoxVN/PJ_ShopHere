<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@(ViewData["Title"] ?? "ShopHere")</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/store.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>

<body>

    <header class="store-header">
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
            <div class="container">
                <a class="navbar-brand fw-bold fs-4" asp-controller="Home" asp-action="Index">ShopHere</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#storeNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="storeNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-lg-2">
                        <li class="nav-item"><a class="nav-link active" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Shop">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Blog" asp-action="Index">Blog</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        @* <button class="btn btn-light btn-icon" type="button"
                                data-bs-toggle="collapse" data-bs-target="#topSearch">
                            <i class="bi bi-search"></i>
                        </button> *@

                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <div class="dropdown">
                                <button class="btn btn-light btn-icon dropdown-toggle"
                                        type="button"
                                        id="userMenu"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    <i class="bi bi-person"></i>
                                </button>

                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                    <li class="px-3 py-2">
                                        <div class="fw-semibold">@User.Identity?.Name</div>
                                        <div class="text-muted small">@User.FindFirst("http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress")?.Value</div>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>

                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Account"
                                           asp-action="Profile">
                                            <i class="bi bi-gear me-2"></i> Chỉnh sửa hồ sơ
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Addresses">
                                            <i class="bi bi-geo-alt me-2"></i> Địa chỉ giao hàng
                                        </a>
                                    </li>


                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Account"
                                           asp-action="Orders">
                                            <i class="bi bi-receipt me-2"></i> Đơn hàng của tôi
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider"></li>

                                    <li>
                                        <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="btn btn-light btn-icon"
                               asp-controller="Auth"
                               asp-action="Login"
                               asp-route-returnUrl="@Context.Request.Path">
                                <i class="bi bi-person"></i>
                            </a>
                        }
                    </div>

                </div>
            </div>
        </nav>

        <div class="collapse border-bottom bg-white" id="topSearch">
            <div class="container py-3">
                <form method="get" action="#">
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                        <input class="form-control" placeholder="Tìm kiếm sản phẩm..." />
                        <button class="btn btn-dark" type="submit">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>
    <!-- Icon xe đẩy mua hàng -->
    <a id="cartBubble" href="@Url.Action("Index", "Cart")" title="Đi tới giỏ hàng">
        🛒
    </a>

    <footer class="border-top mt-5">
        <div class="container py-4 d-flex flex-column flex-md-row justify-content-between gap-2">
            <div class="text-muted">© @DateTime.Now.Year ShopHere. All rights reserved.</div>
            <div class="text-muted">Privacy • Terms • Support</div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
