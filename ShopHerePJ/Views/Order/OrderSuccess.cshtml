@model ShopHerePJ.Data.Entities.order
@{
    ViewData["Title"] = "Đặt hàng thành công";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}

<style>
    .os-wrap {
        padding: 28px 0;
    }

    .os-card {
        background: #fff;
        border: 1px solid rgba(0,0,0,.08);
        border-radius: 20px;
        box-shadow: 0 12px 30px rgba(0,0,0,.06);
        overflow: hidden;
    }

    .os-head {
        padding: 20px 22px;
        background: linear-gradient(135deg, #0f172a, #1f2937);
        color: #fff;
        display: flex;
        align-items: center;
        gap: 14px;
    }

    .os-icon {
        width: 46px;
        height: 46px;
        border-radius: 14px;
        background: rgba(255,255,255,.14);
        display: flex;
        align-items: center;
        justify-content: center;
        flex: 0 0 auto;
        font-size: 22px;
    }

    .os-title {
        font-weight: 900;
        font-size: 18px;
        margin: 0;
    }

    .os-sub {
        opacity: .85;
        font-size: 13px;
        margin: 2px 0 0;
    }

    .os-body {
        padding: 20px 22px;
    }

    .os-badges {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        margin-bottom: 14px;
    }

    .os-badge {
        font-size: 12px;
        padding: 6px 10px;
        border-radius: 999px;
        border: 1px solid rgba(0,0,0,.10);
        background: #f8fafc;
        color: #0f172a;
        font-weight: 700;
    }

        .os-badge.dark {
            background: #111827;
            color: #fff;
            border-color: #111827;
        }

        .os-badge.soft {
            background: #ecfeff;
            border-color: #a5f3fc;
            color: #155e75;
        }

    .os-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
    }

    .os-item {
        border: 1px solid rgba(0,0,0,.08);
        border-radius: 16px;
        padding: 12px 14px;
        background: #fff;
    }

    .os-label {
        color: #6b7280;
        font-size: 12px;
        margin-bottom: 4px;
    }

    .os-value {
        font-weight: 800;
        color: #111827;
    }

    .os-total {
        margin-top: 12px;
        border-top: 1px dashed rgba(0,0,0,.16);
        padding-top: 14px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
    }

        .os-total .v {
            font-size: 20px;
            font-weight: 900;
        }

    .os-actions {
        padding: 18px 22px;
        border-top: 1px solid rgba(0,0,0,.06);
        background: #f8fafc;
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        flex-wrap: wrap;
    }

    .btn-pill {
        border-radius: 999px;
        padding: 10px 14px;
        font-weight: 800;
    }

    .btn-dark2 {
        background: #111827;
        border-color: #111827;
        color: #fff;
    }

        .btn-dark2:hover {
            background: #0b1220;
            border-color: #0b1220;
            color: #fff;
        }
</style>

<div class="container os-wrap">
    <div class="os-card">
        <div class="os-head">
            <div class="os-icon">✓</div>
            <div>
                <h1 class="os-title">Đặt hàng thành công</h1>
                <div class="os-sub">Cảm ơn bạn! Đơn hàng đã được ghi nhận trong hệ thống.</div>
            </div>
        </div>

        <div class="os-body">
            <div class="os-badges">
                <span class="os-badge dark">Order #@Model.order_number</span>
                <span class="os-badge soft">Status: @Model.status</span>
                <span class="os-badge">Payment: @Model.payment_status</span>
            </div>

            <div class="os-grid">
                <div class="os-item">
                    <div class="os-label">Phương thức thanh toán</div>
                    <div class="os-value">@(!string.IsNullOrWhiteSpace(Model.payment_method) ? Model.payment_method : "—")</div>
                </div>

                <div class="os-item">
                    <div class="os-label">Ngày tạo</div>
                    <div class="os-value">@Model.created_at.ToString("dd/MM/yyyy HH:mm")</div>
                </div>

                <div class="os-item">
                    <div class="os-label">Phí ship</div>
                    <div class="os-value">@Model.shipping_fee.ToString("N0") đ</div>
                </div>

                <div class="os-item">
                    <div class="os-label">Thuế</div>
                    <div class="os-value">@Model.tax_amount.ToString("N0") đ</div>
                </div>
            </div>

            <div class="os-total">
                <div>
                    <div class="os-label mb-1">Tổng thanh toán</div>
                    <div class="os-value">Subtotal: @Model.subtotal_amount.ToString("N0") đ</div>
                </div>
                <div class="v">@Model.grand_total.ToString("N0") đ</div>
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.customer_note))
            {
                <div class="os-item mt-3">
                    <div class="os-label">Ghi chú</div>
                    <div class="os-value" style="font-weight:700">@Model.customer_note</div>
                </div>
            }
        </div>

        <div class="os-actions">
            <a asp-controller="Home" asp-action="Index" class="btn btn-dark2 btn-pill">
                Tiếp tục mua sắm
            </a>
        </div>
    </div>
</div>
