@model ShopHerePJ.Models.StoreHomeViewModel
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}

<style>
    /* ====== shared look (đồng bộ Blog/Shop) ====== */
    .home-wrap {
        padding: 18px 0 28px;
    }

    /* ====== HERO ====== */
    .hero-wrap {
        margin-top: 10px;
    }

    .hero-carousel {
        border-radius: 22px;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,.08);
        box-shadow: 0 12px 30px rgba(0,0,0,.08);
    }

    .hero-slide {
        min-height: 420px;
        display: flex;
        align-items: center;
        background: linear-gradient(135deg,#0f172a,#1f2937);
        color: #fff;
        position: relative;
        overflow: hidden;
    }

        .hero-slide:after {
            content: "";
            position: absolute;
            inset: -90px -140px auto auto;
            width: 320px;
            height: 320px;
            background: radial-gradient(circle, rgba(59,130,246,.35), rgba(59,130,246,0));
            transform: rotate(18deg);
            pointer-events: none;
        }

    .hero-content {
        padding: 52px 0;
        position: relative;
        z-index: 2;
    }

    .hero-kicker {
        letter-spacing: .12em;
        text-transform: uppercase;
        font-size: 12px;
        opacity: .85;
        font-weight: 900;
    }

    .hero-slide h1 {
        font-weight: 900;
        line-height: 1.05;
        margin: 0;
    }

    .hero-img {
        position: absolute;
        right: 10px;
        bottom: 0;
        width: min(46%, 520px);
        max-height: 420px;
        object-fit: contain;
        opacity: .98;
        z-index: 1;
        pointer-events: none;
    }

    /* ====== SECTION TITLE ====== */
    .section-title {
        text-align: center;
        margin: 42px 0 16px;
    }

        .section-title h2 {
            font-weight: 900;
            letter-spacing: .01em;
            margin: 0;
        }

    /* ====== TABS ====== */
    .cat-tabs .nav-link {
        border: 0;
        border-bottom: 2px solid transparent;
        border-radius: 0;
        padding: 10px 12px;
        color: #6b7280;
        font-weight: 900;
    }

        .cat-tabs .nav-link.active {
            color: #111827;
            border-bottom-color: #111827;
            background: transparent;
        }

    /* ====== PRODUCT CARD ====== */
    .product-card {
        border: 1px solid rgba(0,0,0,.08);
        border-radius: 18px;
        overflow: hidden;
        background: #fff;
        box-shadow: 0 8px 20px rgba(0,0,0,.05);
        transition: transform .12s ease, box-shadow .12s ease;
        height: 100%;
    }

        .product-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 14px 28px rgba(0,0,0,.08);
        }

    /* Ảnh: cao 225px, không zoom vỡ */
    .product-thumb {
        height: 225px;
        background: #f6f7f8;
        display: flex;
        align-items: center;
        justify-content: center;
        border-bottom: 1px solid rgba(0,0,0,.06);
        overflow: hidden;
    }

        .product-thumb img {
            max-height: 225px;
            width: auto;
            max-width: 100%;
            object-fit: contain;
            padding: 10px;
        }

    .product-meta {
        padding: 12px 14px 14px;
    }

        .product-meta .cat {
            font-size: 11px;
            letter-spacing: .08em;
            text-transform: uppercase;
            color: #6b7280;
            font-weight: 900;
        }

        .product-meta .name {
            font-weight: 900;
            margin: 6px 0 8px;
            min-height: 42px;
            line-height: 1.2;
            color: #111827;
        }

        .product-meta .rating {
            font-size: 12px;
            color: #6b7280;
            font-weight: 800;
        }
</style>

<div class="container home-wrap">
    <!-- HERO -->
    <section class="hero-wrap">
        <div id="heroCarousel" class="carousel slide hero-carousel" data-bs-ride="carousel">
            <div class="carousel-inner">

                <div class="carousel-item active">
                    <div class="hero-slide">
                        <div class="container position-relative">
                            <div class="row">
                                <div class="col-lg-6 hero-content">
                                    <div class="hero-kicker mb-2">Urban Edge</div>
                                    <h1 class="display-4 mb-0">Jackets for the<br />Modern Man</h1>
                                </div>
                            </div>
                            <img class="hero-img" src="~/images/hero/hero-1.png" alt="Hero" />
                        </div>
                    </div>
                </div>

                <div class="carousel-item">
                    <div class="hero-slide">
                        <div class="container position-relative">
                            <div class="row">
                                <div class="col-lg-6 hero-content">
                                    <div class="hero-kicker mb-2">New Season</div>
                                    <h1 class="display-4 mb-0">Fresh Looks<br />Everyday</h1>
                                </div>
                            </div>
                            <img class="hero-img" src="~/images/hero/hero-2.png" alt="Hero" />
                        </div>
                    </div>
                </div>

            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </section>

    <!-- NEW ARRIVALS -->
    <section>
        <div class="section-title">
            <h2>New Arrivals</h2>
            <div class="text-muted">Sản phẩm mới lên kệ</div>
        </div>

        <ul class="nav justify-content-center cat-tabs mb-4" id="catTabs">
            @for (int i = 0; i < Model.Tabs.Count; i++)
            {
                var tab = Model.Tabs[i];
                var key = tab.ToLower();
                <li class="nav-item">
                    <button class="nav-link @(i == 0 ? "active" : "")" type="button" data-filter="@key">@tab</button>
                </li>
            }
        </ul>

        <div class="row g-3" id="productGrid">
            @foreach (var p in Model.NewArrivals)
            {
                <div class="col-6 col-md-4 col-lg-3 product-item" data-cat="@p.CategoryKey">
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@p.Id" class="text-decoration-none">
                        <div class="product-card">
                            <div class="product-thumb">
                                @if (p.ImageId.HasValue)
                                {
                                    <img src="@($"/media/image/{p.ImageId}")" alt="@p.Name" />
                                }
                                else
                                {
                                    <img src="~/images/placeholder.png" alt="@p.Name" />
                                }
                            </div>
                            <div class="product-meta">
                                <div class="cat">@p.CategoryName</div>
                                <div class="name">@p.Name</div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="rating">★ @p.AvgRating.ToString("0.0") (@p.ReviewCount)</div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </section>
</div>

@section Scripts {
    <script>
        const tabs = document.querySelectorAll('#catTabs [data-filter]');
        const items = document.querySelectorAll('#productGrid .product-item');

        function applyFilter(key){
            items.forEach(it => {
                if(key === 'all') { it.style.display = ''; return; }
                const c = (it.getAttribute('data-cat') || '').toLowerCase();
                it.style.display = (c.includes(key)) ? '' : 'none';
            });
        }

        tabs.forEach(btn => {
            btn.addEventListener('click', () => {
                tabs.forEach(x => x.classList.remove('active'));
                btn.classList.add('active');
                applyFilter(btn.getAttribute('data-filter'));
            });
        });
    </script>
}
